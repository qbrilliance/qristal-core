cmake_minimum_required(VERSION 3.20 FATAL_ERROR)

project(demo1
  DESCRIPTION "Quantum Brilliance demo1 example"
  LANGUAGES CXX
)

link_directories(@CMAKE_INSTALL_PREFIX@/lib @XACC_ROOT@/lib)

add_executable(demo1 demo1.cpp)

target_include_directories(demo1
  PRIVATE
    @CMAKE_INSTALL_PREFIX@/include
    @XACC_ROOT@/include/xacc
    @XACC_ROOT@/include/quantum/gate
    @args_SOURCE_DIR@
)

target_link_libraries(demo1
  PRIVATE
    xacc
    qbcore
)
